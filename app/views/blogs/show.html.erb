<div class="container-fluid">
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-7">
			<% if user_signed_in? == true %>
				<%= link_to 'Edit', edit_blog_path(@blog) %> |
				<%= link_to 'Back', blogs_path %>
			<% else %>
				<%= link_to '<-- Back', blogs_path %>
			<% end %>
			<h1>
				<%= @blog.title %>
			</h1>
				<h5 class="author">by: Dan Coley</h5>
				<br>
				<br>
			<p class="blog-text">
				<%= @blog.body %>
			</p>
			<% if user_signed_in? == true %>
				<%= link_to 'Edit', edit_blog_path(@blog) %> |
				<%= link_to 'Back', blogs_path %>
			<% else %>
				<%= link_to '<-- Back', blogs_path %>
			<% end %>
		</div>
		<div class="col-md-1">
		</div>
		<div class="col-md-3">
			<h3>Other Articles</h3>
			<%= @show_blogs %>
		</div>
	</div>
</div>
